
<%= form_for @user, { method: 'patch' } do |f| %>
	<%= f.hidden_field :id %>
	<%= f.label :username %>
	<%= f.text_field :username %>
	<%= f.label :email %>
	<%= f.text_field :email, placeholder:"example@me.com"%>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.submit "edit" %>
<% end %>